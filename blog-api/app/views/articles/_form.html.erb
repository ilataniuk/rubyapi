
<%= form_with model: @art do |f| %>
<div class="row g-3">
  <div class="form-group col-12">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, placeholder: "Enter article title", class: "form-control" %>
  </div>
  <div class="form-group col-12">
    <%= f.label :body, class: "form-label" %>
    <%= f.text_area :body, placeholder: "Enter article text", class: "form-control", rows: 7 %>
  </div>
</div>
  <hr class="my-4">
    <%= f.submit class: "btn btn-success active" %>
    <% unless @art.nil? || @art.id.nil? %>
      <%= link_to "Cancel", article_path(@art), class: "btn btn-outline-danger" %>
    <% end %>
    <%= link_to "Back to list", articles_path, class: "btn btn-outline-secondary" %>
<% end %>
